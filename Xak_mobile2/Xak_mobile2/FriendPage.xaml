<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xak_mobile2.FriendPage" Title="Информация о друге">
    <StackLayout>
        <Label Text="KJUBY" />
        <Entry Text="{Binding Login}" />
        <Label Text="Тег" />
        <Entry Text="{Binding Teg}" />
        <Label Text="Пароль" />
        <Entry Text="{Binding Password}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveFriend" />
            <Button Text="Удалить" Clicked="DeleteFriend" />
            <Button Text="Отмена" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>